<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".Add_Medication" >

    <TextView
        android:id="@+id/add_med_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medication Name:" />


    <EditText
        android:id="@+id/edit_add_med_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Medication Name" />

    <TextView
        android:id="@+id/add_med_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="18dp"
        android:text="TextView" />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/medtypea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_weight="1"
        android:src="@drawable/typea" />

    <ImageButton
        android:id="@+id/medtypeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/typeb" />

    <ImageButton
        android:id="@+id/medtypec"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/typec" />
</LinearLayout>
    <TextView
        android:id="@+id/add_med_does"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOES:" />
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    android:orientation="horizontal">
    <EditText
        android:id="@+id/add_med_quanitity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:layout_weight="1"
        android:ems="10"
        android:hint="Quanitiy" />
    <EditText
        android:id="@+id/add_med_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
      
        android:ems="10"
        android:hint="Unit" />
    </LinearLayout>
    <TextView
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How often per day do you take it" />

    <EditText
        android:id="@+id/add_med_per_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Times" />
    
        <Button
        android:id="@+id/addmeddonebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
        android:text="ADD MEDICATION" />

       
    
</LinearLayout>